<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('partials/head') %>

<!-- body -->

<body class="bg-[#0D0D0D]">

  <!-- Main container -->
  <div class="w-full h-full md:h-screen grid grid-cols-1 md:grid-cols-12 overflow-hidden">

    <!-- Sidebar (Navbar) -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="grid-cols-1 md:col-span-10 h-full md:min-h-screen overflow-y-auto">

      <!-- Grid Container -->
      <div class="grid p-4 gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6">
        <% if (heroes.length === 0) { %>
        <%- include('partials/emptydb') %>
        <% } else { %>

        <% heroes.forEach(hero => { %>

        <!-- grid item -->
        <div class="col-span-1 md:col-span-full xl:col-span-2 min-h-[300px] bg-[#111111] rounded-lg flex flex-col p-6 border-2 border-transparent hover:border-[#45E77A] hover:border-opacity-50 transition-all duration-300">
        <!-- auxiliar para obtener el id -->
          <h2 class="text-lg uppercase font-semibold text-[#d4d4d4] text-center"><%= hero.nombreSuperHeroe %></h2>
          <h3 class="text-base font-semibold text-[#45E77A] mb-4 text-center opacity-80">
            <%= hero.nombreReal %>
          </h3>

          <!-- attribute container -->
          <div class="w-full flex flex-col gap-4 text-left mb-6">
            <!-- attribute item -->
            <div class="w-full bg-[#181818] p-3 rounded-lg flex gap-2 justify-start items-center">
              <p class="text-[#d4d4d4] font-semibold">Planeta:</p>
              <p class="text-[#8a8a8a]"><%= hero.planetaOrigen %></p>
            </div>

            <!-- attribute item -->
            <div class="w-full bg-[#181818] p-3 rounded-lg flex gap-2 justify-start items-center">
              <p class="text-[#d4d4d4] font-semibold">Edad:</p>
              <p class="text-[#8a8a8a]"><%= hero.edad %> <span>años</span></p>
            </div>

            <!-- attribute item -->
            <div class="w-full bg-[#181818] p-3 rounded-lg flex gap-2 justify-start items-center">
              <p class="text-[#d4d4d4] font-semibold">Creador:</p>
              <p class="text-[#8a8a8a]"><%= hero.creador %></p>
            </div>
          </div>

          <!-- action buttons -->
          <div class="action-buttons w-full p-3 self-end flex items-center justify-end">
            <!-- ver más -->
            <a href="/heroes/<%= hero.id %>" class="text-[#5d5d5d] hover:text-[#53E897] transition-all duration-200 mr-4" title="ver detalle">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
            </a>

            <!-- editar -->
            <a href="/heroes/<%= hero.id %>/editar" class="text-[#5d5d5d] mr-4 hover:text-[#53E897] transition-all duration-200" title="editar héroe">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z" />
                <path d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z" />
              </svg>
            </a>

            <!-- eliminar -->
             <form action="/heroes/<%= hero.id %>?_method=DELETE" method="POST" class="flex justify-center items-center" onsubmit="return confirmDelete()">

              <button type="submit" class="btn_deleteHero text-[#5d5d5d] hover:text-[#53E897] transition-all duration-300" title="eliminar héroe">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
              </button>
            </form>
            
          </div>
        </div>

        <% }) %>

        <% } %>
      </div>
    </div>
  </div>

  <script src="/js/deleteHero.js"></script>
</body>

</html>